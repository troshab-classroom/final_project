      <Button layoutX="423.0" layoutY="39.0" mnemonicParsing="false" onAction="#showStatistics" text="Get statistics" />
      <Label fx:id="statusLabel" layoutX="18.0" layoutY="343.0" prefHeight="17.0" prefWidth="305.0" />
   </children>
</AnchorPane>
