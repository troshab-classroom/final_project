<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="251.0" prefWidth="272.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.LoginController">
    <VBox alignment="TOP_CENTER" layoutX="7.0" prefHeight="280.0" prefWidth="341.0" spacing="10">
        <children>
            <Label alignment="CENTER" cache="true" cacheHint="SCALE" prefHeight="30.0" prefWidth="70.0" text="Login" textAlignment="LEFT">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font></Label>
            <TextField fx:id="loginField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="254.0" />
            <Label alignment="CENTER" cache="true" cacheHint="SCALE" contentDisplay="CENTER" prefHeight="30.0" prefWidth="86.0" text="Password" textAlignment="LEFT">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font></Label>
            <PasswordField fx:id="passwordField" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="256.0" />
           <Button fx:id="signIn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#processLogin" prefHeight="30.0" prefWidth="68.0" text="Sign In" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font></Button>
         <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" layoutX="149.0" layoutY="163.0" mnemonicParsing="false" onAction="#addUser" text="Sign Up" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Button>
         <Label fx:id="statusLabel" prefHeight="17.0" prefWidth="320.0" />
        </children>
    </VBox>

</AnchorPane>
